{
    "componentPath": "./src/wwObject.vue",
    "options": {},
    "editor": {
        "label": {
            "en": "Text",
            "fr": "Texte"
        },
        "menuOptions": {
            "items": [
                {
                    "name": "Font size",
                    "quick": [{ "type": "custom-style", "name": "fontSize" }],
                    "icon": "sizing"
                },
                {
                    "name": "Tag",
                    "quick": [{ "type": "custom-settings", "name": "tag" }],
                    "icon": "H3"
                }
            ]
        },
        "styleOptions": {
            "fontSize": {
                "type": "Length",
                "label": {
                    "en": "Size",
                    "fr": "Taille"
                },
                "options": {
                    "unitChoices": [{ "value": "px", "label": "px", "min": 1, "max": 100 }]
                }
            },
            "fontFamily": {
                "type": "FontFamily",
                "label": {
                    "en": "Font family",
                    "fr": "Font"
                },
                "path": "globalStyle.fontFamily"
            },
            "textAlign": {
                "type": "TextRadioGroup",
                "options": {
                    "choices": [
                        {
                            "value": "left",
                            "default": true,
                            "title": { "en": "Left", "fr": "Gauche" },
                            "icon": "text-align-left"
                        },
                        { "value": "center", "title": { "en": "Center", "fr": "Milieu" }, "icon": "text-align-center" },
                        { "value": "right", "title": { "en": "Right", "fr": "Droite" }, "icon": "text-align-right" },
                        {
                            "value": "justify",
                            "title": { "en": "Justify", "fr": "Justifi√©" },
                            "icon": "text-align-justify"
                        }
                    ]
                },
                "label": {
                    "en": "Alignement",
                    "fr": "Alignement"
                },
                "path": "globalStyle.textAlign"
            },
            "textColor": {
                "type": "Color",
                "label": {
                    "en": "Text color",
                    "fr": "Couleur du texte"
                },
                "options": {
                    "nullable": true
                },
                "path": "globalStyle.color"
            },
            "bgColor": {
                "type": "Color",
                "label": {
                    "en": "Background color",
                    "fr": "Couleur du background"
                },
                "options": {
                    "nullable": true
                },
                "path": "globalStyle.backgroundColor"
            },
            "transformation": {
                "label": {
                    "en": "Character case",
                    "fr": "Character case"
                },
                "type": "TextSelect",
                "options": {
                    "options": [
                        { "value": null, "label": "none" },
                        { "value": "capitalize", "label": "capitalize" },
                        { "value": "uppercase", "label": "uppercase" },
                        { "value": "lowercase", "label": "lowercase" }
                    ]
                },
                "path": "globalStyle.textTransform"
            },
            "shadows": {
                "label": {
                    "en": "Text Shadows",
                    "fr": "Ombres du texte"
                },
                "type": "Shadows",
                "options": {
                    "isText": true
                },
                "path": "globalStyle.textShadow"
            },
            "lineHeight": {
                "label": {
                    "en": "Line height",
                    "fr": "Hauteur de ligne"
                },
                "type": "Length",
                "options": {
                    "unitChoices": [{ "value": "px", "label": "px", "min": 0, "max": 100 }]
                },
                "path": "globalStyle.lineHeight"
            },
            "wordSpacing": {
                "label": {
                    "en": "Word spacing",
                    "fr": "Espacement des mots"
                },
                "type": "Length",
                "options": {
                    "unitChoices": [{ "value": "px", "label": "px", "min": 0, "max": 100 }]
                },
                "path": "globalStyle.wordSpacing"
            }
        },
        "settingsOptions": [
            {
                "label": {
                    "en": "SEO",
                    "fr": "SEO"
                },
                "fields": {
                    "tag": {
                        "type": "TextSelect",
                        "label": {
                            "en": "Html tag",
                            "fr": "Tag html"
                        },
                        "options": {
                            "options": [
                                { "value": "div", "label": "div" },
                                { "value": "button", "label": "button" },
                                { "value": "h1", "label": "h1" },
                                { "value": "h2", "label": "h2" },
                                { "value": "h3", "label": "h3" },
                                { "value": "h4", "label": "h4" }
                            ]
                        }
                    }
                }
            }
        ]
    }
}
