{
    "componentPath": "./src/wwObject.vue",
    "options": {
        "autoByContent": true
    },
    "editor": {
        "label": {
            "en": "Text",
            "fr": "Texte"
        },
        "menuOptions": {
            "items": [
                {
                    "name": "Typography",
                    "quick": [{ "type": "custom-style", "name": "fontStyle" }],
                    "icon": "Size"
                },
                {
                    "name": "Tag",
                    "quick": [{ "type": "custom-settings", "name": "tag" }],
                    "icon": "H3"
                }
            ]
        },
        "styleOptions": {
            "fontStyle": {
                "type": "Typography",
                "label": {
                    "en": "Style",
                    "fr": "Style"
                }
            },
            "transformation": {
                "label": {
                    "en": "Character case",
                    "fr": "Character case"
                },
                "type": "TextSelect",
                "options": {
                    "options": [
                        { "value": null, "label": "none" },
                        { "value": "capitalize", "label": "capitalize" },
                        { "value": "uppercase", "label": "uppercase" },
                        { "value": "lowercase", "label": "lowercase" }
                    ]
                },
                "path": "globalStyle.textTransform"
            },
            "shadows": {
                "label": {
                    "en": "Text Shadows",
                    "fr": "Ombres du texte"
                },
                "type": "Shadows",
                "options": {
                    "isText": true
                },
                "path": "globalStyle.textShadow"
            },
            "lineHeight": {
                "label": {
                    "en": "Line height",
                    "fr": "Hauteur de ligne"
                },
                "type": "Length",
                "options": {
                    "unitChoices": [{ "value": "px", "label": "px", "min": 0, "max": 100 }]
                },
                "path": "globalStyle.lineHeight"
            },
            "wordSpacing": {
                "label": {
                    "en": "Word spacing",
                    "fr": "Espacement des mots"
                },
                "type": "Length",
                "options": {
                    "unitChoices": [{ "value": "px", "label": "px", "min": 0, "max": 100 }]
                },
                "path": "globalStyle.wordSpacing"
            }
        },
        "settingsOptions": [
            {
                "label": {
                    "en": "SEO",
                    "fr": "SEO"
                },
                "fields": {
                    "tag": {
                        "type": "TextSelect",
                        "label": {
                            "en": "Html tag",
                            "fr": "Tag html"
                        },
                        "options": {
                            "options": [
                                { "value": "div", "label": "div" },
                                { "value": "button", "label": "button" },
                                { "value": "h1", "label": "h1" },
                                { "value": "h2", "label": "h2" },
                                { "value": "h3", "label": "h3" },
                                { "value": "h4", "label": "h4" }
                            ]
                        }
                    }
                }
            }
        ]
    }
}
